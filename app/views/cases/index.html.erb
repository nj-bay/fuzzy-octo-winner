<p id="notice"><%= notice %></p>

<h1>Listing Cases</h1>

<table>
  <thead>
    <tr>
      <th>Case number</th>
      <th>Type</th>
      <th>Sub type</th>
      <th>Sub type detail</th>
      <th>Case ids</th>
      <th>Serial numbers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cases.each do |case| %>
      <tr>
        <td><%= case.case_number %></td>
        <td><%= case.type_id %></td>
        <td><%= case.sub_type_id %></td>
        <td><%= case.sub_type_detail %></td>
        <td><%= case.case_ids %></td>
        <td><%= case.serial_numbers %></td>
        <td><%= link_to 'Show', case %></td>
        <td><%= link_to 'Edit', edit_case_path(case) %></td>
        <td><%= link_to 'Destroy', case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

